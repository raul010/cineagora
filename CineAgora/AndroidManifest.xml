<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.cineagora"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
	
    <application
        android:name="br.com.cineagora.util.GlobalCinema" 
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.cineagora.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.cineagora.CinemaFragment"
            android:label="@string/title_activity_lista_cinema_fragment" >
        </activity>
        <activity
            android:name="br.com.cineagora.DetalhesFilmeFragment"
            android:label="@string/title_activity_detalhes_filme_fragment" >
        </activity>
        <activity
            android:name="br.com.cineagora.FragmentStackSupport"
            android:label="@string/title_activity_fragment_stack_support" >
        </activity>
        <activity
            android:name="br.com.cineagora.LoaderCursorSupport"
            android:label="@string/title_activity_loader_cursor_support" >
        </activity>
        <activity
            android:name="br.com.cineagora.LoaderCustomSupport"
            android:label="@string/title_activity_loader_custom_support" >
        </activity>
        <activity
            android:name="br.com.cineagora.LoaderThrottleSupport"
            android:label="@string/title_activity_loader_throttle_support" >
        </activity>
    </application>

</manifest>
